<%- include('../partials/jobHeader') %>
<div class="banner" style="background-image: url(/images/home-banner.jpg);">
    <div class="container">
        <% if((error && error.length > 0) || (success && success.length > 0)){ %>
            <div class="pt-3" >
                <div class="container">

                    <% if(error && error.length > 0){ %>
                        <div class=" mt-0 mb-0 alert alert-danger alert-dismissible fade show" role="alert">
                            <%= error %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    <% } %>

                    <% if(success && success.length > 0){ %>
                        <div class=" mt-0 mb-0 alert alert-success alert-dismissible fade show" role="alert">
                            <%= success %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    <% } %>

                </div>
            </div>
        <% } %>
        <div class="row">
            <div class="col-lg-6">
                <div class="index-content">
                    <h1 class="fw-bold">We'll help you find your <span>desired job</span></h1>
                    <p class="fs-4 lead">Find Jobs, Employment & Career Opportunities</p>
                    <br>
                    <div class="job-search-field">
                        <div class="job-search-item">
                            <form action="/jobs/search" method="get" class="form row">
                                <div class="col-lg-5">
                                    <div class="form-group">
                                        <div class="d-flex">
                                            <label class="form-label">What</label>
                                            <span class="ms-auto">e.g. job, company</span>
                                        </div>
                                        <div class="position-relative left-icon">
                                            <input type="text" class="form-control" name="name" placeholder="Job title, or company">
                                            <i class="fas fa-search"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-5 col-sm-12">
                                    <div class="form-group form-action ">
                                        <button type="submit" class="btn btn-danger btn-lg"><i class="fas fa-search"></i> Find Jobs</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <svg style="width: 100%;bottom: -1px; position:  absolute;height: fit-content;" class="banner-shape" xmlns="http://www.w3.org/2000/svg" width="100%" height="100" viewBox="0 0 1920 100">
        <path style="margin: 0;padding: 0;" class="cls-1" fill="#ffffff" d="M0,80S480,0,960,0s960,80,960,80v20H0V80Z"></path>
    </svg>
</div>
<!-- Work Section Start  -->
<div style="padding-top: 45px; padding-bottom: 60px;" class="mt-5 mb-5 work-section section pb-100 pb-lg-80 pb-md-60 pb-sm-40 pb-xs-30">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title-wrap mb-45 mb-sm-30 mb-xs-20">
                    <div class="section-title">
                        <h3 class="title fw-bold text-uppercase">See how it works</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-lg-4 col-md-6">
                <!-- Single Work Start  -->
                <div class="single-work">
                    <div class="work-image">
                        <span class="step">01</span>
                        <img src="/images/icon_register_user.webp" alt="">
                    </div>
                    <div class="work-content">
                        <h3 class="title"><a id="color-red" class="text-decoration-none" href="#">Register an account</a></h3>
                        <p>Contact your admin/PC to get a hirehub account and start applying for jobs.</p>
                    </div>
                </div>
                <!-- Single Work End  -->
            </div>
            <div class="col-lg-4 col-md-6">
                <!-- Single Work Start  -->
                <div class="single-work">
                    <div class="work-image">
                        <span class="step">02</span>
                        <img src="/images/icon_search_job.png" alt="">
                    </div>
                    <div class="work-content">
                        <h3 class="title"><a id="color-red" class="text-decoration-none" href="#">Search your job</a></h3>
                        <p>Browse profiles, job postings, and proposals based on the technical specifications and requirements.</p>
                    </div>
                </div>
                <!-- Single Work End  -->
            </div>
            <div class="col-lg-4 col-md-6">
                <!-- Single Work Start  -->
                <div class="single-work">
                    <div class="work-image">
                        <span class="step">03</span>
                        <img src="/images//icon_apply.png" alt="">
                    </div>
                    <div class="work-content">
                        <h3 class="title"><a id="color-red" class="text-decoration-none" href="#">Apply for job</a></h3>
                        <p>Use the hirehub platform to apply, manage your resume, and give interviews directly from this platform.</p>
                    </div>
                </div>
                <!-- Single Work End  -->
            </div>
        </div>
    </div>
</div>
<br>
<!-- Work Section End  -->
<!-- resume section -->
<div style="padding-top: 90px; padding-bottom: 120px; background-image: url(/images/cv.svg); background-repeat: no-repeat; background-position: center top;" class="online-cv section-overly pt-90 pb-120">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-10">
                <div class="cv-caption text-center">
                    <% if(currentUser){%>
                        <p class="pera2"> Make a Difference with Your Online Resume!</p>
                    <a  href="/users/<%= currentUser?._id %>/edit" class="home-text text-decoration-none border-btn2 border-btn4">Upload your cv</a>
                   <% } else {%>

                    <p class="pera2"> Make a Difference with Your Online Resume!</p>
                    <a style=" pointer-events: none" href="/users/<%= currentUser?._id %>/edit" class="home-text text-decoration-none border-btn2 border-btn4">Upload your cv</a>

                   <%} %>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- recent jobs -->
<div class="latest-job-box latest-job py-5">
    <div style="margin-top: 45px; margin-bottom: 60px;" class="container bg-light p-4 rounded-3">
        <div class="container">
            <h3 class="fw-bold text-uppercase">Latest Jobs</h3>
            <% recentJobs.docs.forEach(function(job){ %>
            <hr>
            <div class="card bg-light mb-3">
                <div class="row g-0">
                    <div class="col-md-2 d-flex align-items-center justify-content-center">
                        <% if(job.logo.length > 25) {%>
                            <img style="width: 90%; height: auto;" src="<%= job.logo %>" class="img-fluid rounded-start my-auto p-3" alt="Logo">
                        <%}else {%>
                            
                                <i class="fa-solid fa-briefcase fa-2xl" style="color: #166974;"></i>
                            
                        <%}%>
                        
                    </div>
                    <div class="col-md-7">
                        <div class="card-body">
                            <h4 class="card-title">
                                <%= job.postName %>
                            </h4>
                            <p class="card-text"><small class="text-muted">
                                    <i class="me-1 fas fa-map-marker-alt"></i> <%= job.location %>
                                    <i class="ms-3 me-1 far fa-clock"></i> <%= job.time %>
                                    <i class="ms-3 me-1 far fa-money-bill-alt"></i>
                                    <%= job.CTC %>
                                    <i class="ms-3 me-1 fas fa-hourglass-half"></i> <%= job.deadline?.toDateString() %>
                                </small></p>
                        </div>
                    </div>
                    <div class="col-md-3 d-flex align-items-center justify-content-center">
                        <a href="/jobs/<%= job._id %>" class="btn btn-outline-danger">Apply Now</a>
                    </div>
                </div>
            </div>
            <% }); %>

            <div class="mt-4 d-flex justify-content-center">
                <nav aria-label="Page navigation example">
                    <ul class="pagination">
            
                        <li class="page-item"><a <% if(!recentJobs.hasPrevPage){%>
                            style="pointer-events: none"
                        <% } %> class="page-link" href="/home?page=<%= recentJobs.prevPage %>"><i class="fa-sharp fa-solid fa-arrow-left "></i></a></li>
            
                        <li class="page-item"><a  class="page-link" href="/home?page=<%= recentJobs.page %>"><%= recentJobs.page %></a></li>
            
                        <li class="page-item"><a  <% if(!recentJobs.hasNextPage){%>
                            style="pointer-events: none"
                        <% } %> class="page-link" href="/home?page=<%= recentJobs.page + 1 %>"><%= recentJobs.page + 1 %></a>
                        </li>
            
                        <li class="page-item"><a  <% if(recentJobs.totalDocs < (recentJobs.page + 2)*recentJobs.limit  ){%>
                            style="pointer-events: none"
                        <% } %> class="page-link" href="/home?page=<%= recentJobs.page + 2 %>"><%= recentJobs.page + 2 %></a>
                        </li>
            
                        <li class="page-item"><a <% if(!recentJobs.hasNextPage){%>
                            style="pointer-events: none"
                        <% } %> class="page-link" href="/home?page=<%= recentJobs.nextPage %>"><i class="fa-sharp fa-solid fa-arrow-right "></i></a></li>
                    </ul>
                </nav>
            </div>

            <div class="d-flex justify-content-center"><a href="/jobs" class="btn btn-danger">View All Jobs</button></a>
            </div>
            
        </div>
    </div>
</div>
<!-- footer -->
<%- include('../partials/userFooter') %>
<%- include('../partials/footer') %>
